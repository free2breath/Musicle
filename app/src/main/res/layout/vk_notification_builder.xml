<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout

        android:id="@+id/vk_notif_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vk_photo_notif"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/vkonline"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.0"
            android:gravity="center"
            android:paddingStart="3dp"
            android:paddingLeft="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vk_song_names_notif1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:singleLine="true"
                android:text="Please select the song"
                android:textColor="@color/vk_bottom" />
            <TextView
                android:id="@+id/vk_song_names_notif2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:singleLine="true"
                android:text="Please select the song"
                android:textColor="@color/vk_bottom" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.0"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/prev_vk_notif"

                android:layout_width="35dp"
                android:layout_height="35dp"
                android:clickable="false"
                android:src="@drawable/vk_notif_prev" />

            <ImageView
                android:id="@+id/play_vk_notif"
                android:layout_width="35dp"
                android:layout_height="35dp"
                />

            <ImageView
                android:id="@+id/next_vk_notif"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/vk_notif_next" />

            <ImageView
                android:id="@+id/close_notif"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_close_black_24dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>